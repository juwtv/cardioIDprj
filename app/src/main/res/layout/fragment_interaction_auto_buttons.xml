<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragments.interactionAutoButtons.InteractionAutoButtonsFragment">

    <!-- "Waiting for Auto Notification" Text -->
    <TextView
        android:id="@+id/tvWaitingNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/waiting_for_auto_notification"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/sectionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center">

        <!-- Section 1: Authentication -->
        <LinearLayout
            android:id="@+id/sectionAuthentication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/authentication"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnAcceptDriver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/accept_driver" />

                <Button
                    android:id="@+id/btnDenyDriver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/deny_driver"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Section 2: Pop-ups -->
        <LinearLayout
            android:id="@+id/sectionPopUps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pop_ups"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDrowsiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/drowsiness"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnBothHands"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/both_hands"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnLongDrive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/long_drive"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnHighHRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/high_hrv"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnLowHRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/low_hrv" />
            </LinearLayout>
        </LinearLayout>

        <!-- Section 3: ECG -->
        <LinearLayout
            android:id="@+id/sectionECG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ecg"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnEverythingOk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/everything_ok" />

                <Button
                    android:id="@+id/btnFoundProblem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/found_a_problem"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>